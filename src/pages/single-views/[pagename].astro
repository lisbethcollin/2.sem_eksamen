const { myData } = Astro.props;
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title={myData.name}>
    <section id="breadcrumb">
        <a href="index.astro"></a>

    </section>
    
    <h1>{myData.name}</h1>
    
    <section id="categories">

    </section>
    <section>
        <article class="container">
            <img src={"/smykker_webp/" + myData.small_img} id="top_img" alt={myData.name}>
            <img src={"/smykker_webp/" + myData.big_img} id="big_img" alt={myData.name}>
        </article>
        <article>
            <h2>{myData.name} </h2>
            <p>{myData.short_des} </p>
            <p>{myData.price},00 kr.</p>
            <br><br>
            <h3>Materiale</h3>
            <p>{myData.material_des}</p>
            <img src="" alt="sustain_icon">
            <button>Læg i kurv</button>
        </article>
        <article class="container">
            <img src={"/kvinder_webp/" + myData.lady_img} id="lady_img" alt={myData.name}>
            <img src={"/webp_texture/" + myData.vibe_img} alt={myData.name}>
        </article>
        <article>
            <h2>Beskrivelse og inspiration</h2>
            <p>{myData.long_des}</p>
            <p>{myData.lady_des}</p>
        </article>
        <article>
            <h2>Andre kiggede også på...</h2>
            <section class="grid_view_more">
                <div>
                    <img src="" alt="">
                    navn på smykket
                    prisen
                </div>
            </section>
        </article>
    </section>
</MainLayout>

<style>
.container {
