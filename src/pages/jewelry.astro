<style>
  /*** får overskriften til at sidde midten */
  h1{
    text-align: center;
    font-weight: 200;
  }

     a{
        text-decoration:none;
        color:var(  --text-color);
        
}
  /* linjen i web **/
  hr{
    color:var(--text-color);
    
  }

  .kategorier{
display: none;
  }

  /*** grid til produkterne i listevisning*/
.grid_1-1{
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-left: 1rem;
  margin-right: 1rem;
 
}
/*** knappen i bunder med indlæs flere */
.see_more {
    background-color: var(--text-color);
    padding: 10px 70px;
    color: var(--text-color-white);
    margin-top: 3rem;
    margin-bottom: 3rem;
    border: none;
    font-family: var( --font-family-text);
    font-size: var(--font-size-s);
  
 /*** får knappen til at sidde i midten */
    margin-left: auto;
    margin-right: auto;
    display: block;
  
}

/**** scrolle menuen med kategorierne */
#carousel {
    display: flex;
	overflow-y: auto;
  gap: 1rem;
  padding: 1rem;  
  margin-top: 1rem;
}


#carousel button {
  background-color: var(--box-color);
border: none;
border-radius: 1.5rem;
padding-top: 9px;
padding-bottom: 9px;
padding-left: 13px;
padding-right: 13px;
font-family: judson;
color: var(--text-color);
font-size: var(--font-size-xs);

}

/*** hele containeren med filter og sorter knappen */
#filtering{
  display: flex;
  justify-content: center;
  gap: 1rem;
  background-color: var(--box-color);
  padding-top: 1rem;
  padding-bottom: 1rem;
  margin-bottom: 1rem;
}

/* Style til filter og sorter knap */
.dropbtn {
  background-color: white;
 font-family: judson;
color: var(--text-color);
font-size: var(--font-size-xs);
 padding-top: 7px;
padding-bottom: 7px;
padding-left: 15px;
  border: none;
  cursor: pointer;
  border-radius: 0.7rem;
min-width: 9rem;
text-align: left;
 
}

/* Style til dropdown menuen til filter og sorter knap */
.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f9f9f9;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

/* Style til links i dropdown */
.dropdown-content a {
  color: var(--text-color);
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

/* Hover farve til dropdown menuen */
.dropdown-content a:hover {
  background-color: var(--box-color);
}

/* Show the dropdown menu on hover */
.dropdown:hover .dropdown-content {
  display: block;
}

/****grid listeview mellemstørrelse skærm */
@media (min-width: 500px) {
.grid_1-1{
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 1rem;
  margin-left: 1rem;
  margin-right: 1rem;
 
}

}

@media (min-width: 760px) {

  #carousel{
    display: none;
  }
/*** hele containeren med filter og sorter knappen i web */
  #filtering{
  display: flex;
  justify-content: left;
  gap: 1rem;
  padding-top: 1rem;
  padding-bottom: 1rem;
  margin-bottom: 1rem;
 background-color: transparent;
}

/*** grid til produkterne i listevisning i web*/
.grid_1-1{
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  margin-left: auto;
  margin-right: auto;
  margin-top: 2rem;
  justify-items: center;
}

.kategorier{
display: flex;
justify-content: center;
gap: 3rem;
margin-top: 2.5rem;
margin-bottom: 1rem;

}

}
/** skjuler linjen i mobil */
@media (max-width: 760px) {
hr{
  display: none;
}
}
