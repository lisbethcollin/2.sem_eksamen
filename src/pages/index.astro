	display: grid;
	grid-template-columns: 1fr 1fr;
}
	@media (min-width: 760px){
		.grid_2-1{
		display: grid;
		grid-template-columns: 2fr 1fr;
		margin-left: 1rem;
		margin-right: 1rem;
		gap: 1rem;
		margin-bottom: 3rem;
	}
	.img_grid1{
display: flex;
flex-direction: column;
justify-content: space-between;
	}

